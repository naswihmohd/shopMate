<!-- Spinner Start -->
<div id="spinner"
    class="show w-100 vh-100 bg-white position-fixed translate-middle top-50 start-50  d-flex align-items-center justify-content-center">
    <div class="spinner-grow text-primary" role="status"></div>
</div>
<!-- Spinner End -->


<!-- user header Navbar start -->
<div class="container-fluid fixed-top">
    <div class="container topbar bg-danger d-none d-lg-block">
        <div class="d-flex justify-content-between">
            <div class="top-info ps-2">
                {{#if user}}
                <small class="me-3"><i class="text-white bi bi-person-circle"></i> 
                <a href="/profile"
                        class="text-white"><b>{{user.Name}}</b></a></small>
                        {{/if}}
            </div>
            <div class="top-link pe-2">
                <a href="#" class="text-white"><small class="text-white mx-2">Privacy Policy</small>/</a>
                <a href="#" class="text-white"><small class="text-white mx-2">Terms of Use</small>/</a>
                <a href="#" class="text-white"><small class="text-white ms-2">Sales and Refunds</small></a>
            </div>
        </div>
    </div>
    <div class="container px-0">
        <nav class="navbar navbar-light bg-white navbar-expand-xl">
            <a href="#" class="navbar-brand">
                <h1 class="text-dark display-6">ShopMate</h1>
            </a>
            <button class="navbar-toggler py-2 px-3" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarCollapse">
                <span class="fa fa-bars text-primary"></span>
            </button>
            <div class="collapse navbar-collapse bg-white" id="navbarCollapse">
                <div class="navbar-nav mx-auto">
                    <a href="/" class="nav-item nav-link active">Home</a>
                    <a href="/shopping" class="nav-item nav-link">Shopping</a>
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Pages</a>
                        <div class="dropdown-menu m-0 bg-secondary rounded-0">
                            <a href="/cart" class="dropdown-item">Cart</a>
                            <a href="/ordered-list" class="dropdown-item">Orders</a>
                            <a href="testimonial.html" class="dropdown-item">Testimonial</a>
                        </div>
                    </div>
                    <a href="/about" class="nav-item nav-link">About Us</a>
                    <a href="/contact" class="nav-item nav-link">Contact</a>
                </div>
                <div class="d-flex m-3 me-0">
                    <a href="/cart" class="position-relative me-4 my-auto">
                        <i class="bi bi-cart fa-2x"></i>
                        {{#if user}}
                        <span
                            class="position-absolute bg-secondary rounded-circle d-flex align-items-center justify-content-center text-dark px-1"
                            style="top: -5px; left: 15px; height: 20px; min-width: 20px;" id="cart-count">{{cartCount}}</span>
                            {{/if}}
                    </a>
                    {{#if user}}
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown"><i class="fas fa-user fa-2x"></i></a>
                        <div class="dropdown-menu m-0 bg-secondary rounded-0">
                            <a href="/profile" class="dropdown-item"><i class="bi bi-person-check"></i> Profile </i></a>
                            <a href="/logout" class="dropdown-item text-danger"><i class="bi bi-box-arrow-left"></i> Logout </i></a>
                        </div>
                    </div>
                    {{else}}
                    <a href="/login" class="my-auto">
                        <i class="fas fa-user fa-2x"></i>
                    </a>
                    {{/if}}
                </div>
            </div>
        </nav>
    </div>
</div>
<!-- user header Navbar End -->