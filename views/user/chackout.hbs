
        <!-- Single Page Header start -->
        <div class="container-fluid page-header py-5">
            <h1 class="text-center text-white display-6">Checkout</h1>
            <ol class="breadcrumb justify-content-center mb-0">
                <li class="breadcrumb-item"><a href="#">Home</a></li>
                <li class="breadcrumb-item"><a href="#">Pages</a></li>
                <li class="breadcrumb-item active text-white">Checkout</li>
            </ol>
        </div>
        <!-- Single Page Header End -->


        <!-- Checkout Page Start -->
        <div class="container-fluid py-5">
            <div class="container py-5">
                <h1 class="mb-4">Billing details</h1>
                <form action="#" id="checkout-form">
                    <div class="row g-5">
                        <div class="col-md-12 col-lg-6 col-xl-7">
                            <div class="row">
                                <div class="col-md-12 col-lg-6">
                                    <div class="form-item w-100">
                                        <label class="form-label my-3">First Name</label>
                                        <input type="text" name="firstName" class="form-control">
                                    </div>
                                </div>
                                <div class="col-md-12 col-lg-6">
                                    <div class="form-item w-100">
                                        <label class="form-label my-3">Last Name</label>
                                        <input type="text" name="lastName" class="form-control">
                                    </div>
                                </div>
                            </div>
                            <div class="form-item">
                                <label class="form-label my-3">Company Name</label>
                                <input type="text" name="companyName" class="form-control">
                            </div>
                            <div class="form-item">
                                <label class="form-label my-3">Address</label>
                                <input type="text" name="Address" class="form-control" placeholder="Your House Name">
                            </div>
                            <div class="form-item">
                                <label class="form-label my-3">Place</label>
                                <input type="text" name="Place" class="form-control">
                            </div>
                            <div class="form-item">
                                <label class="form-label my-3">Post</label>
                                <input type="text" name="Post" class="form-control">
                            </div>
                            <div class="form-item">
                                <label class="form-label my-3">District</label>
                                <input type="text" name="District" class="form-control">
                            </div>
                            <div class="form-item">
                                <label class="form-label my-3">Country</label>
                                <input type="text" name="Country" class="form-control">
                            </div>
                            <div class="form-item">
                                <label class="form-label my-3">Postcode/Zip</label>
                                <input type="text" name="Pincode" class="form-control">
                            </div>
                            <div class="form-item">
                                <label class="form-label my-3">Mobile</label>
                                <input type="tel" name="Mobile" class="form-control">
                            </div>
                            <div class="form-item">
                                <label class="form-label my-3">Email Address</label>
                                <input type="email" name="Email" class="form-control">
                                <input type="text" name="userId" value="{{user._id}}" hidden>
                            </div>
                        </div>
                        <div class="col-md-12 col-lg-6 col-xl-5">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th scope="col">Products</th>
                                            <th scope="col">Name</th>
                                            <th scope="col">Price</th>
                                            <th scope="col">Quantity</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each products}}
                                        <tr>
                                            <th scope="row">
                                                <div class="d-flex align-items-center mt-2">
                                                    <img src="/product-images/{{this.product._id}}.jpg" class="img-fluid rounded-circle" style="width: 90px; height: 70px;" alt="">
                                                </div>
                                            </th>
                                            <td class="py-5">{{this.product.Name}}</td>
                                            <td class="py-5">{{this.product.Price}}</td>
                                            <td class="py-5 text-center">{{this.quantity}}</td>
                                        </tr>
                                        {{/each}}
                                        <tr>
                                            <th scope="row">
                                            </th>
                                            <td class="py-5">
                                                <p class="mb-0 text-dark text-uppercase py-3">TOTAL</p>
                                            </td>
                                            <td class="py-5">
                                                <div class="py-3 border-bottom border-top">
                                                    <p class="mb-0 text-dark">{{totalAmount}}</p>
                                                </div>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <div class="row g-4 text-center align-items-center justify-content-center border-bottom py-3">
                                <div class="col-12">
                                    <div class="form-check text-start my-3">
                                        <input type="radio" class="form-check-input bg-primary border-0" name="payment-method" value="COD">
                                        <label class="form-check-label" for="Payments-1">Cash On Delivery</label>
                                    </div>
                                </div>
                            </div>
                            <div class="row g-4 text-center align-items-center justify-content-center border-bottom py-3">
                                <div class="col-12">
                                    <div class="form-check text-start my-3">
                                        <input type="radio" class="form-check-input bg-primary border-0" name="payment-method" value="ONLINE">
                                        <label class="form-check-label" for="Delivery-1">Online Payment</label>
                                    </div>
                                </div>
                            </div>
                            <div class="row g-4 text-center align-items-center justify-content-center pt-4">
                                <button type="submit" class="btn border-secondary py-3 px-4 text-uppercase w-100 text-primary">Place Order</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <!-- Checkout Page End -->